---
import "../styles/asake.css"
const { pageTitle } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
<link rel="stylesheet" href="/src/styles/asake.css"> 
  </head>

  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/news">News/Tour</a>
      <a href="/playlist">Playlist</a>
    </nav>

<div class="page-header">
  {pageTitle === 'Asake Playlist' && (
    <img src="/asake-hero.jpg" alt="Asake" class="playlist-img" />
  )}

  {pageTitle !== 'Asake Fan Hub' && <h1>{pageTitle}</h1>}
</div>

<div class="content">
  <slot />
</div>

    <footer>
      <div class="footer-style">
       <p>OPEYEMI SARAH OGUNMOLA | Student No: <span>12345678</span></p>
       
      <a href="https://www.griffith.ie" target="_blank" rel="noopener noreferrer">
        <img src="/griffith-logo.png"  alt="Griffith College logo"  class="footer-logo"/>
        </a>
      </div>
    </footer>
  </body>
</html>