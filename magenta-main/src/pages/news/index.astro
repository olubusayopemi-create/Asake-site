---
import BaseLayout from './../layouts/BaseLayout.astro';

// Load all markdown files in this folder
const allPosts = await Astro.glob('./*.md');
---
<BaseLayout pageTitle="News & Tour Updates">
  <section>
    <div class="blog-intro">
      <h2>Latest from the Asake World</h2>
      <p>
        Short updates about albums, tours and moments around Asake. explore to read more.
      </p>
    </div>

    <div class="blog-grid">
      {allPosts.map((post) => (
        <article class="blog-card">
          <img
            src={post.frontmatter.image || '/news-default.jpg'}
            alt={post.frontmatter.title}
          />
          <a href={post.url}>{post.frontmatter.title}</a>
          <p>{post.frontmatter.description}</p>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>